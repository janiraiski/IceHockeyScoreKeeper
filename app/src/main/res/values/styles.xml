<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorButton</item>
    </style>

    <!--
     Here I wanted to try to use this TextBaseStyle as a parent to
    other styles.
    -->
    <style name="TextBaseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeaderStyle" parent="TextBaseStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextSubHeaderStyle" parent="TextBaseStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAmount" parent="TextBaseStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">46sp</item>
    </style>

    <style name="TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorButtonText</item>
    </style>

    <style name="TextSecondSubHeaderStyle" parent="TextBaseStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="ResetButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">@color/colorButtonText</item>
    </style>

</resources>
